<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".MainActivity">


    <View
        android:id="@+id/vRectangle"
        android:layout_width="45dp"
        android:layout_height="43dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="139dp"
        android:background="@drawable/view_item_background"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHello"
        android:layout_width="209dp"
        android:layout_height="53dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="210dp"
        android:fontFamily="@font/roboto_medium"
        android:gravity="top"
        android:lineHeight="49.22sp"
        android:text="@string/hello"
        android:textColor="@color/white"
        android:textSize="42sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvIntroduce"
        android:layout_width="136dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="272dp"
        android:fontFamily="@font/roboto"
        android:gravity="top"
        android:lineHeight="28.13sp"
        android:text="@string/lets_introduce"
        android:textColor="@color/text_color_grey"
        android:textSize="22sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vUser"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="338dp"
        android:background="@drawable/view_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivUserIcon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="@id/vUser"
        app:layout_constraintEnd_toEndOf="@id/vUser"
        app:layout_constraintStart_toStartOf="@id/vUser"
        app:layout_constraintTop_toTopOf="@id/vUser" />

    <TextView
        android:id="@+id/tvFullName"
        android:layout_width="106dp"
        android:layout_height="21dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="350dp"
        android:fontFamily="@font/roboto"
        android:lineHeight="21.09dp"
        android:text="@string/your_full_name"
        android:textColor="@color/text_color_grey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vUserBackground"
        android:layout_width="38dp"
        android:layout_height="48dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/view_user"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivIcon"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="@id/vUserBackground"
        app:layout_constraintEnd_toEndOf="@id/vUserBackground"
        app:layout_constraintStart_toStartOf="@id/vUserBackground"
        app:layout_constraintTop_toTopOf="@id/vUserBackground" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="78dp"
        android:layout_height="21dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="443dp"
        android:fontFamily="@font/roboto"
        android:lineHeight="21.09dp"
        android:text="Username"
        android:textColor="@color/text_color_grey"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivFirstLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="390dp"
        android:alpha="0.05"
        android:src="@drawable/ic_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ivSecondLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="482dp"
        android:alpha="0.05"
        android:src="@drawable/ic_line"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <View
        android:id="@+id/vRectangleDarkGreen"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="548dp"
        android:background="@drawable/view_dark_green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vGreenArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_arrow"
        android:rotationY="180"
        app:layout_constraintBottom_toBottomOf="@id/vRectangleDarkGreen"
        app:layout_constraintEnd_toEndOf="@id/vRectangleDarkGreen"
        app:layout_constraintStart_toStartOf="@id/vRectangleDarkGreen"
        app:layout_constraintTop_toTopOf="@id/vRectangleDarkGreen" />

    <View
        android:id="@+id/vNext"
        android:layout_width="245dp"
        android:layout_height="58dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="548dp"
        android:background="@drawable/button_view_background"
        android:contentDescription="@string/next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvNext"
        android:layout_width="38dp"
        android:layout_height="20dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="21dp"
        android:fontFamily="@font/roboto"
        android:text="@string/next"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/vNext"
        app:layout_constraintTop_toTopOf="@id/vNext" />

    <View
        android:id="@+id/ivWhiteArrow"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/ic_white_arrow"
        app:layout_constraintStart_toEndOf="@id/tvNext"
        app:layout_constraintTop_toTopOf="@id/vNext" />


</androidx.constraintlayout.widget.ConstraintLayout>